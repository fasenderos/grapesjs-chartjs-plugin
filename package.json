{
  "name": "grapesjs-chartjs-plugin",
  "version": "0.2.0",
  "description": "GrapesJS Plugin to integrate Chart.js into your GrapesJS editor.",
  "main": "dist/index.js",
  "author": "Andrea Fassina <fasenderos@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git@github.com:fasenderos/grapesjs-chartjs-plugin.git"
  },
  "homepage": "https://github.com/fasenderos/grapesjs-chartjs-plugin",
  "bugs": {
    "url": "https://github.com/fasenderos/grapesjs-chartjs-plugin/issues"
  },
  "scripts": {
    "build": "rm -rf ./dist && rm -rf ./locale && grapesjs-cli build --patch=false",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "release": "node --env-file=.env ./node_modules/release-it/bin/release-it.js --ci",
    "start": "grapesjs-cli serve"
  },
  "keywords": [
    "grapesjs chartjs plugin",
    "grapesjs chartjs",
    "grapesjs chart.js plugin",
    "grapesjs chart.js",
    "grapesjs charts",
    "grapesjs",
    "chartjs",
    "chart.js",
    "grapesjs plugin",
    "grapesjs plugin chartjs",
    "grapesjs plugin chart.js",
    "grapesjs plugin charts",
    "charts"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@release-it/conventional-changelog": "^10.0.0",
    "chart.js": "^4.4.7",
    "grapesjs": "^0.22.5",
    "grapesjs-cli": "^4.1.3",
    "release-it": "^18.1.2"
  },
  "license": "MIT",
  "files": [
    "dist",
    "locale",
    "AUTHORS",
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "package.json"
  ]
}
